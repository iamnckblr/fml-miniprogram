/**index.wxss**/

.card-container{
  text-align: left;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
}

.card{
  margin-top:50rpx;
  display: flex;
  flex-direction: column;
  padding: 20rpx;
  box-shadow: 3px 6px 12px 0px rgba(0,0,0,0.1); 
  width:600rpx;
}

.card .message{
  align-self: flex-start;
}

.card .upvote{
  align-self: flex-end;
}

.emoji-logo{
  width:28px;
  height:28px;
}